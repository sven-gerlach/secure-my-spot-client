    "history": "^5.0.1",
    "husky": "^7.0.2",
    "lint-staged": "^11.1.2",
    "prettier": "^2.4.1",
    "react-devtools": "^4.19.0",
    "react-test-renderer": "^17.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src/**/*}.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --write --ignore-unknown --no-error-on-unmatched-pattern {src/**/*}.{js,jsx,ts,tsx,json,css,scss,md}"
    ]
  }
}
